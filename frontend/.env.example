# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API base URL
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Public URL of the frontend application
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Application name
NEXT_PUBLIC_APP_NAME=AI Appointment Scheduler

# =============================================================================
# PAYMENT GATEWAY PUBLIC KEYS
# =============================================================================
# Stripe publishable key (safe to expose in frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Razorpay key ID (safe to expose in frontend)
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id

# =============================================================================
# AI CHAT WIDGET CONFIGURATION
# =============================================================================
# Enable/disable the AI chat widget
NEXT_PUBLIC_CHAT_WIDGET_ENABLED=true

# Chat widget position: bottom-right, bottom-left
NEXT_PUBLIC_CHAT_WIDGET_POSITION=bottom-right

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable WhatsApp integration
NEXT_PUBLIC_ENABLE_WHATSAPP=true

# Enable Facebook Messenger integration
NEXT_PUBLIC_ENABLE_MESSENGER=true

# Enable Instagram Direct Messages integration
NEXT_PUBLIC_ENABLE_INSTAGRAM=true

# Enable multi-language support
NEXT_PUBLIC_ENABLE_I18N=false

# =============================================================================
# ANALYTICS AND MONITORING (OPTIONAL)
# =============================================================================
# Google Analytics tracking ID
NEXT_PUBLIC_GA_TRACKING_ID=

# Hotjar site ID for user behavior analytics
NEXT_PUBLIC_HOTJAR_ID=

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Environment: development, staging, production
NEXT_PUBLIC_ENV=development

# =============================================================================
# TIMEZONE AND LOCALIZATION
# =============================================================================
# Default timezone for the application
NEXT_PUBLIC_DEFAULT_TIMEZONE=UTC

# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE=en

# =============================================================================
# BOOKING CONFIGURATION
# =============================================================================
# Maximum days in advance customers can book
NEXT_PUBLIC_MAX_BOOKING_DAYS=90

# Minimum hours in advance for booking
NEXT_PUBLIC_MIN_BOOKING_HOURS=2

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Theme: light, dark, system
NEXT_PUBLIC_DEFAULT_THEME=light

# Enable animations
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
