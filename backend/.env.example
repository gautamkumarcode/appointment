# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Environment: development, staging, production
NODE_ENV=development

# Port for the Express server
PORT=3000

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=postgresql://username:password@localhost:5432/appointment_scheduler?schema=public

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis host for job queue and caching
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Redis database index (0-15)
REDIS_DB=0

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Secret key for signing JWT tokens (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Token expiration times
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
# Stripe (Global payments)
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Razorpay (India-based payments)
# Get keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SendGrid API key for sending emails
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key

# Email sender details
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=AI Appointment Scheduler

# =============================================================================
# SMS/WHATSAPP CONFIGURATION (TWILIO)
# =============================================================================
# Twilio credentials for SMS and WhatsApp messaging
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# =============================================================================
# WHATSAPP CLOUD API
# =============================================================================
# WhatsApp Business API credentials
# Get from: https://developers.facebook.com/apps/
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token

# =============================================================================
# FACEBOOK MESSENGER
# =============================================================================
# Facebook Messenger integration credentials
# Get from: https://developers.facebook.com/apps/
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token
FACEBOOK_VERIFY_TOKEN=your_facebook_verify_token
FACEBOOK_APP_SECRET=your_facebook_app_secret

# =============================================================================
# INSTAGRAM DIRECT MESSAGES
# =============================================================================
# Instagram messaging integration credentials
# Get from: https://developers.facebook.com/apps/
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_VERIFY_TOKEN=your_instagram_verify_token

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
# OpenAI API configuration
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# OR use Anthropic Claude
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-opus-20240229

# AI Assistant settings
AI_RESPONSE_TIMEOUT=5000
AI_MAX_TOKENS=1000

# =============================================================================
# CORS AND FRONTEND CONFIGURATION
# =============================================================================
# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3001

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FILE STORAGE (OPTIONAL)
# =============================================================================
# AWS S3 configuration for file uploads (logos, etc.)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=appointment-scheduler-uploads

# =============================================================================
# BACKGROUND JOBS
# =============================================================================
# Job queue settings
QUEUE_CONCURRENCY=5
REMINDER_CHECK_INTERVAL=3600000

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================
# Default timezone for the system
DEFAULT_TIMEZONE=UTC

# =============================================================================
# SECURITY
# =============================================================================
# CORS settings
CORS_ENABLED=true

# Cookie settings
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# =============================================================================
# MONITORING AND ANALYTICS (OPTIONAL)
# =============================================================================
# Sentry for error tracking
# SENTRY_DSN=your_sentry_dsn

# Application insights or other monitoring
# APP_INSIGHTS_KEY=your_app_insights_key
